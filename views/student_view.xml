<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>

		<record id="student_tree_view" model="ir.ui.view">
			<field name="name">Student Tree View</field>
			<field name="model">student</field>
			<field name="arch" type="xml">
				<header>
					<button name="unlink" string="Delete" type="object"
						class="btn-primary" />
				</header>
				<tree string=''>
					<field name="name" />
					<field name="age" />
					<field name="gender" />
					<field name="phone" />
					<field name="address" />
					<field name="email" />
					<field name="password" />
					<field name="active" />
				</tree>
			</field>
		</record>
		<record id="student_form_view" model="ir.ui.view">
			<field name="name">Student Form View</field>
			<field name="model">student</field>
			<field name="arch" type="xml">
				<form string=''>
					<sheet string=''>
						<button name="create_multi_test" string="Create_Multi"
							type="object" class="btn-primary" />
						<group>
							<group>
								<field name="name" />
								<field name="age" />
								<field name="gender" />
								<field name="phone" />
								<field name="address" />
							</group>
							<group>
								<field name="email" />
								<field name="password" />
								<field name="class_detail_id" />
							</group>

							<notebook>
								<page string="My Achievements">
									<field name="student_detail_line_ids">
										<tree editable='bottom'>
											<field name='student_id' />
											<field name='lecture' />
											<field name='score1' />
											<field name='score2' />
											<field name='state' readonly="1" force_save="1" />
										</tree>
									</field>
								</page>
							</notebook>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="student_kanban_view" model="ir.ui.view">
			<field name="name">Student Kanban View</field>
			<field name="model">student</field>
			<field name="arch" type="xml">
				<kanban>
					<field name='name' />
					<field name="age" />
					<field name="phone" />
					<field name="email" />
					<template>
						<t t-name="kanban-box">
							<div t-attf-class="oe_kanban_global_click oe_kanban_content">
								<div class="oe_kanban_details">
									>
									<div class="oe_kanban_title">
										>
										<t t-esc="record.name.value" />
									</div>
									<div class="oe_kanban_subtitle">
										>
										<t t-esc="'Age: ' + record.age.value" />
									</div>
									<div class="oe_kanban_subtitle">
										>
										<t t-esc="'Phone: ' + record.phone.value" />
									</div>
									<div class="oe_kanban_subtitle">
										>
										<t t-esc="'Email: ' + record.email.value" />
									</div>
								</div>
							</div>
						</t>
					</template>
				</kanban>
			</field>
		</record>

		<record id="student_search_view" model="ir.ui.view">
			<field name="name">Student Search View</field>
			<field name="model">student</field>
			<field name="arch" type="xml">
				<search string="">
					<field name="name" />
					<field name="phone" />
					<field name="email" />
					<group>
						<filter string='student' name='group_student_id'
							context="{'group_by':'address'}" />
					</group>
				</search>
			</field>
		</record>
		<record id="student_manager_student_action"
			model="ir.actions.act_window">
			<field name="name">Student</field>
			<field name="res_model">student</field>
			<field name="view_mode">tree,form,kanban</field>
		</record>
	</data>
</odoo>