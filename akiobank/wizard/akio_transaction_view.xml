<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="akio_transaction_sendmoney_form_view" model="ir.ui.view">
            <field name="name">Akio Transation Send Money</field>
            <field name="model">akio.transaction</field>
            <field name="arch" type="xml">
                <form string="Akio Transation Send Money">
                    <group>
                        <field name="customer_receive" />
                        <field name="account_number" />
                        <field name="deposit" required='1'/>
                    </group>
                    <footer>
                        <button string="send" type="object" name="sendmoney" class="btn-primary" />
                        <button string="cancel" special="cancel" class="btn-secondary" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="akio_sendmoney_trans_action" model = "ir.actions.act_window">
            <field name = "name">Akio Transation Send Money</field>
            <field name = "type">ir.actions.act_window</field>
            <field name = "res_model">akio.transaction</field>
            <field name = "view_mode">form</field>
            <field name ="target">new</field>
            <!-- <field name="context">{
                'akio_customer_id' : active_id,
            }</field> -->
        </record>


    </data>

</odoo>