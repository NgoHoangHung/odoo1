<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="list_view_wallet" model="ir.ui.view">
			<field name="name">Wallet Tree View</field>
			<field name="model">wallet</field>
			<field name="arch" type="xml">
				<tree>
					<field name="accountnumber" />
					<field name="akio_customer_id" />
					<field name="bank_name" />
					<field name="balance" />
				</tree>
			</field>
		</record>
		<record id="form_view_akio_wallet" model="ir.ui.view">
			<field name="name">Wallet Form View</field>
			<field name="model">wallet</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<div>
						
							<button name="akio_debug" string="Debug" type="object"
								class="btn-primary" />
							<button name="akio_create0" string="Schedule 0" type="object"
								class="btn-primary" />
							<button name="akio_update1" string="Schedule 1" type="object"
								class="btn-primary" />
							<button name="akio_delete2" string="Schedule 2" type="object"
								class="btn-primary" />
							<button name="akio_unlink3" string="Schedule 3" type="object"
								class="btn-primary" />
						</div>
					</header>
					<sheet>
						<group>
							<group>
								<field name="akio_customer_id" />
								<field name="bank_name" />
							</group>
							<group>
								<field name="accountnumber" />
								<field name="password" />
								<field name="balance" />
							</group>
						</group>
						<notebook>
							<page string="Lịch Sử ">
								<field name="transaction_history_ids">
									<tree editable='bottom'>
										<field name="creat_at" />
										<field name="partner_id" />
										<field name="deposit" />
										<field name="trans_type" />
									</tree>
								</field>
							</page>
							<page>
								<field name="akio_schedule_ids">
									<tree>
										<field name="name" />
										<field name="create_at" />
										<field name="estimate_at" />
										<field name="wallet_id" />
										<field name="akio_interest_rate" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<record id="akiobank_wallet_view_action"
			model="ir.actions.act_window">
			<field name="name">Wallet</field>
			<field name="res_model">wallet</field>
			<field name="view_mode">tree,form</field>
		</record>

	</data>



</odoo>
